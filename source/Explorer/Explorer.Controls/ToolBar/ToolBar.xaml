<UserControl x:Class="Explorer.Controls.ToolBar.NavigationWindowToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Explorer.Controls.ToolBar"
             mc:Ignorable="d" 
             Height="Auto">
    <Grid>
        <StackPanel TextElement.Foreground="White">
            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
            <TextBlock Text="{Binding FullName}" FontSize="10"/>
        </StackPanel>    
    </Grid>
</UserControl>
