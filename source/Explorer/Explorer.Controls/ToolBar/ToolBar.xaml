<UserControl x:Class="Explorer.Controls.ToolBar.NavigationWindowToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Explorer.Controls.ToolBar"
             mc:Ignorable="d" 
             Height="Auto">
    <Grid>
        <StackPanel HorizontalAlignment="Center" TextElement.Foreground="White">
            <StackPanel.Effect>
                <DropShadowEffect ShadowDepth="1" BlurRadius="1"/>
            </StackPanel.Effect>
            <TextBlock Text="{Binding CurrentViewModel.Name}" FontWeight="Bold" FontSize="14"/>
            <TextBlock Text="{Binding CurrentViewModel.FullName}" FontSize="10"/>
        </StackPanel>    
    </Grid>
</UserControl>
