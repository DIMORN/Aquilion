<Window x:Class="ExplorerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExplorerApp"
        xmlns:controls="clr-namespace:ExplorerApp.Controls"
        xmlns:tb="clr-namespace:ExplorerApp.Controls.ToolBar"
        mc:Ignorable="d"
        Title="{Binding ExplorerViewModel.Current.Name}" Height="450" Width="800"
        FontFamily="Tahoma"
        AllowsTransparency="True"
        WindowStyle="None"
        Style="{DynamicResource Style|Window|Default}">
    <DockPanel LastChildFill="True">
        <tb:ToolBar DockPanel.Dock="Top"/>
        <controls:ShellView/>
    </DockPanel>
</Window>
